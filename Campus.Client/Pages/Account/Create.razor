@page "/register"

<h3>Register</h3>

<p hidden="@IsNotRegistered">
    Registration Sucessful!
</p>

<EditForm Model=@studentModel OnValidSubmit=@HandleSubmit>
	<DataAnnotationsValidator />

    <div class="form-group row mb-3">
        <label for="name" class="col-md-2 col-form-label">Name</label>
        <div class="col-md-5">
            <InputText id="name" class="form-control" @bind-Value="studentModel!.Name" />
            <ValidationMessage For="@(() => studentModel.Name)" />
        </div>
    </div>


    <div class="form-group row mb-3">
        <label for="surname" class="col-md-2 col-form-label">Surname</label>
        <div class="col-md-5">
            <InputText id="surname" class="form-control" @bind-Value="studentModel!.Surname" />
            <ValidationMessage For="@(() => studentModel.Surname)" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="email" class="col-md-2 col-form-label">Email</label>
        <div class="col-md-5">
            <InputText type="email" id="email" class="form-control" @bind-Value="studentModel!.Email" />
            <ValidationMessage For="@(() => studentModel.Email)" />
        </div>
    </div>

    <div class="form-group row mb-4">
        <label for="password" class="col-md-2 col-form-label">Password</label>
        <div class="col-md-5">
            <InputText type="password" id="password" class="form-control" @bind-Value="studentModel!.Password" />
            <ValidationMessage For="@(() => studentModel.Password)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-5 ml-4">
            <button class="btn btn-primary" type="submit">Register</button>
            <button class="btn btn-secondary" type="button" @onclick="()=>Return()">Cancel</button>
        </div>
    </div>

</EditForm>